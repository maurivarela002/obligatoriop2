@using Dominio.Entidades

<link rel="stylesheet" href="~/css/login.css" />

<section class="login-section">
    <div class="login-container">
        <div class="login-card">
            <div class="login-content">
                <h2 class="login-title">INICIAR SESIÓN</h2>
                <p class="login-subtitle">Ingresa tus credenciales para continuar</p>

                <form action="/Login/Ingresar" method="post">
                    <div class="form-group">
                        <input type="email" 
                               name="email" 
                               class="login-input"
                               required 
                               placeholder="Email"
                               @(ViewBag.BloquearFormulario == true ? "disabled" : "")/>
                    </div>

                    <div class="form-group">
                        <input type="password" 
                               name="password" 
                               class="login-input"
                               required 
                               placeholder="Contraseña"
                               @(ViewBag.BloquearFormulario == true ? "disabled" : "")/>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                    {
                        <div class="login-alert @(ViewBag.BloquearFormulario == true ? "login-alert-blocked" : "")">
                            <div class="alert-icon">
                                @if (ViewBag.BloquearFormulario == true)
                                {
                                    <i class="fas fa-lock"></i>
                                }
                                else
                                {
                                    <i class="fas fa-exclamation-circle"></i>
                                }
                            </div>
                            <div class="alert-message">@ViewBag.Mensaje</div>
                        </div>
                    }

                    <button class="login-button" type="submit" @(ViewBag.BloquearFormulario == true ? "disabled" : "")>
                        Ingresar
                    </button>

                    <a asp-controller="Home" asp-action="Home" class="login-link">
                        Volver al inicio
                    </a>
                </form>
            </div>
        </div>
    </div>
</section>
