@using Dominio.Entidades
<h1>Lista de Publicaciones</h1>


<div>@ViewBag.mensaje</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">Fecha Publicacion</th>
			<th scope="col">Nombre</th>
			<th scope="col">Estado</th>
			<th scope="col">Tipo</th>
			<th scope="col">Precio</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			@foreach (Publicacion item in ViewBag.Publicacion)
			{
				<tr>
					<td>@item.FchPublic.ToString("yyyy-MM-dd")</td>
					<th scope="row">@item.Nombre</th>
					<td>@item.Estados</td>
					<td>@item.Tipo()</td>
					<td>@item.PrecioPublicacion()</td>
					<td><a href="VerArticulos?nombrePublicacion=@item.Nombre" class="btn btn-primary">Ver Articulos</a></td>
						@if (item.Estados==Dominio.Sistema.EnumEstados.ABIERTA)
						{
					<td><a href="compraOferta?nombrePublicacion=@item.Nombre" class="btn btn-success">@item.BtnComprar()</a></td>

						}
						else
						{
						<td></td>
						}
				</tr>
			}
	</tbody>
</table>


<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
	<ul class="navbar-nav flex-grow-1">
		<li class="nav-item">
			Nombre de usuario
		</li>
		<li class="nav-item">
			@Context.Session.GetString("UserName")
		</li>
		<li class="nav-item">
			Saldo actual
		</li>
		<li class="nav-item">
			@ViewBag.Saldoactual
		</li>
</ul>

</div>